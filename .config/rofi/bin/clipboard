DIR="$HOME/.config"

rofi \
	-show clipboard \
	-modi "clipboard:greenclip print" \
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{cmd}" \
	-no-drun-show-actions \
	-theme "$DIR"/rofi/themes/launcher.rasi
